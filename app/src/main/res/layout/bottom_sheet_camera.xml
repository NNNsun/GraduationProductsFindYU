<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetCamera"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background_white">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:src="@drawable/bottom_sheet_handle"
        />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="사진으로 검색해보세요"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/camera_ex" />

    <ImageButton
        android:id="@+id/camera_library"
        android:scaleType="fitStart"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:src="@drawable/camera_btn_library_v2"/>

    <ImageView
        android:layout_gravity="center"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/camera_divider"/>


    <ImageButton
        android:id="@+id/camera_camera"
        android:scaleType="fitStart"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/camera_btn_camera_v2"/>


</LinearLayout>